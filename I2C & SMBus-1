# SMBus Code for Raspberry Pi 

from smbus import SMBus
addr = 0x8     # bus address 
bus = SMBus(1)    # indicates/dev/i2c-1
numb = 1

print("Enter 1 -> ON & 0 -> OFF")
while numb==1:
        ledstate=input(">>>>    â€œ)

         if ledstate=="1":
               bus.write_byte(addr,0x1)  # switch it ON
         elif ledstate=="0":
               bus.write_byte(addr,0x0)
         else:
               numb=0
